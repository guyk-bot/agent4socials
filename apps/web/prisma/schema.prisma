generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

model User {
  id            String   @id @default(cuid())
  supabaseId    String?  @unique
  email         String   @unique
  password      String?
  name          String?
  provider      AuthProvider @default(LOCAL)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
